@model IEnumerable<CMSMVCFinal.Models.Models.PostViewModel>
@{
    ViewBag.Title = "AdminPanel";
}
<link href="~/bootstrap.css" rel="stylesheet" />
<link href="~/styles.css" rel="stylesheet" />
@* navbar *@

<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Admin Panel</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container-fluid -->
</nav>

@* navbar end *@

<br />
<br />
<br />
<br />
<div class="col-md-2">
    <div class="sidebar content-box" style="display: block;">

        <ul class="nav nav-pills nav-stacked">
            <li role="presentation">@Html.ActionLink("Add Posts", "CreatePost", "CMS")</li>

            <li role="presentation">@Html.ActionLink("View All Posts", "LoginIndex", "CMS")</li>
            <li role="presentation">@Html.ActionLink("Logout", "Logout", "Login")</li>
        </ul>
    </div>
    <span>@ViewBag.message</span>
</div>

<div class="container-fluid">
    <div class="rows">

        <div class="col-lg-10">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.PostId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PostTitle)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Post)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FeaturedPhoto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PostCreator)
                    </th>
                    <th>Options
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PostId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PostTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Post)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FeaturedPhoto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PostCreator)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.PostId }) |

            @Html.ActionLink("Delete", "Delete", new { id = item.PostId })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

<p>
</p>