@model CMSMVCFinal.Models.Models.MailModel

@{
    ViewBag.Title = "iForgot";
}
<link href="~/bootstrap.css" rel="stylesheet" />

@using (Html.BeginForm("iForgot", "Login", FormMethod.Post, new { @id = "Form1", @enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <div class="container" style="text-align: center">
        <div class="col-lg-6 col-lg-offset-3">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Forgot Your Password</h3>
                </div>
                <div class="panel-body">
                    <div class="editor-label">
                        Please Enter your Email Address
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.To, new { @class = "form-control", @placeholder = "Email Address Here" })
                        @Html.ValidationMessageFor(model => model.To)
                    </div>
                    <br />
                    <p>
                        <input type="submit" value="Confirm" class="btn btn-danger" />
                        @Html.ActionLink("Back", "Login", "", new { @class = "btn btn-primary" })
                    </p>
                    <div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}